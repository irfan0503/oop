package com.Day4.Inheritance;

class Engine {
    void start() {
        System.out.println("ðŸ”‘ Engine Started");
    }

    void stop() {
        System.out.println("ðŸ›‘ Engine Stopped");
    }
}

class Car {
    // Composition: Car has an Engine
    Engine engine = new Engine();

    void startCar() {
        System.out.println("Attempting to start the car...");
        engine.start();
        System.out.println("ðŸš— Car is now running");
    }

    void stopCar() {
        engine.stop();
        System.out.println("ðŸš˜ Car has stopped");
    }
}

public class Composition {
    public static void main(String[] args) {
        Car car = new Car();
        car.startCar();
        System.out.println("----------------------");
        car.stopCar();
    }
}
