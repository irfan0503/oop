package com.Day3;

class Student {
    String name;
    int rno;
    String dept;
    static String college;

    // Constructor for easy initialization
    public Student(String name, int rno, String dept) {
        this.name = name;
        this.rno = rno;
        this.dept = dept;
    }

    public void display() {
        System.out.println("Name: " + name);
        System.out.println("Rno: " + rno);
        System.out.println("Dept: " + dept);
        System.out.println("College Name: " + college);
    }
}

public class ClassDemo {
    public static void main(String[] args) {
        // Set the common college name (shared by all students)
        Student.college = "ABC Institute of Technology";

        // Create student objects using constructor
        Student s1 = new Student("Omar", 201, "Mechanical");
        Student s2 = new Student("Sahbeen", 202, "Information Technology");
        Student s3 = new Student("Abdullah", 203, "Civil");

        // Display student details
        s1.display();
        System.out.println("----------------------");
        s2.display();
        System.out.println("----------------------");
        s3.display();
    }
}
